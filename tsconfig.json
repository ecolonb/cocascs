{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    // "module": "es2016",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*.spec.ts"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
